{
  "$schema": "https://deno.land/x/denon@2.5.0/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run src/main.ts",
      "allow": {
        "env": true,
        "read": ".env,.env.defaults",
        "net": "localhost:5432"
      }
    },
    "nessie:install": {
      "cmd": "deno install -f https://deno.land/x/nessie/cli.ts",
      "watch": false,
      "unstable": true,
      "allow": {
        "read": ".",
        "write": "nessie.config.ts,db",
        "net": "localhost:5432"
      }
    }
  }
}
